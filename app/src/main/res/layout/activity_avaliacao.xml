<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_avaliacao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/verde"
    tools:context="br.edu.iff.pooa20162.servicecar.activity.AvaliacaoActivity">

    <TextView
        android:id="@+id/idAvaliacaoCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Faça a sua avaliação"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Deixe seu comentário:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/idComentarios"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp" />

    <Button
        android:text="Salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idSalvarAvaliacao"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/idAlterarAvaliacao"
        android:layout_marginStart="24dp"
        tools:ignore="HardcodedText" />

    <Button
        android:text="Alterar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idAlterarAvaliacao"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView2"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/idComentarios"
        android:layout_marginBottom="70dp"
        android:layout_above="@+id/idSalvarAvaliacao"
        android:layout_centerHorizontal="true"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/idAvaliacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/idComentarios"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Nota de 1 a 5):"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/idAvaliacao"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />
</RelativeLayout>
